{
    "manifest_version": 2,
    "name": "Petivity",
    "description": "Productiviy's Best Friend",
    "version": "1.0",
    "chrome_url_overrides" : {
        "newtab": "petivity.html"
    },
    "browser_action": {
        "default_icon": "images/crab.png",
        "default_popup": "popup.html",
        "default_title": "Quick Settings"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "content_scripts": [{
        "js": ["js/petivity.js", "js/settings.js", "js/blocking.js"],
        "css": ["css/petivity.css"],
        "matches": ["*://*.google.com/_/chrome/newtab*"]
    }],
    "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.2.1.slim.min.js https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js; object-src 'self'"
}